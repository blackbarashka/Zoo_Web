  "components": {
    "schemas": {
      "Animal": {
        "required": [
          "birthDate",
          "favoriteFood",
          "gender",
          "name",
          "species"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "species": {
            "minLength": 1,
            "type": "string"
          },
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "gender": {
            "minLength": 1,
            "type": "string"
          },
          "favoriteFood": {
            "$ref": "#/components/schemas/Food"
          },
          "isHealthy": {
            "type": "boolean"
          },
          "enclosureId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "type": {
            "$ref": "#/components/schemas/AnimalType"
          },
          "kindnessLevel": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "earLength": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "iq": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "tailLength": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Класс, представляющий животное в зоопарке."
      },
      "AnimalType": {
        "enum": [
          0,
          1,
          2,
          3
        ],
        "type": "integer",
        "description": "Перечисление типов животных.",
        "format": "int32"
      },
      "Enclosure": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "type": {
            "$ref": "#/components/schemas/EnclosureType"
          },
          "size": {
            "type": "integer",
            "format": "int32"
          },
          "currentAnimalCount": {
            "type": "integer",
            "format": "int32"
          },
          "maxCapacity": {
            "type": "integer",
            "format": "int32"
          },
          "animalIds": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            },
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Класс, представляющий вольер в зоопарке."
      },
      "EnclosureType": {
        "enum": [
          0,
          1,
          2,
          3
        ],
        "type": "integer",
        "description": "Перечисление типов вольеров в зоопарке.",
        "format": "int32"
      },
      "FeedingSchedule": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "animalId": {
            "type": "integer",
            "format": "int32"
          },
          "feedingTime": {
            "type": "string",
            "format": "date-time"
          },
          "foodType": {
            "type": "string",
            "nullable": true
          },
          "isCompleted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "description": "Класс, представляющий график кормления животных в зоопарке."
      },
      "FeedingScheduleRequest": {
        "type": "object",
        "properties": {
          "animalId": {
            "type": "integer",
            "format": "int32"
          },
          "feedingTime": {
            "type": "string",
            "format": "date-time"
          },
          "foodType": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Модель запроса для создания расписания кормления."
      },
      "Food": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "quantity": {
            "type": "integer",
